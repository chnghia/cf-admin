<%- layout('empty') -%>
    <header class="">
    <div class="navbar navbar-inverse">
      <div class="navbar-inner">
        <div class="container-fluid">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="#" name="top">cf-admin</a>
          <div class="nav-collapse collapse">
          </div> <!--/.nav-collapse -->
        </div> <!--/.container-fluid -->
      </div> <!--/.navbar-inner -->
    </div>
    </header>

    <div class="container-fluid">

      <div class="row">
        <div class="offset4 span4">
          <div class="well">
            <legend>Sign in to cf-admin</legend>
            <form method="POST" action="/login" accept-charset="UTF-8">
                <% if (message != '') { %>
                <div class="alert alert-error">
                  <a class="close" data-dismiss="alert" href="#">x</a><%= message %>
                </div>
                <% } %>
                <input class="span3" placeholder="Username" type="text" name="username">
                <input class="span3" placeholder="Password" type="password" name="password"> 
                <label class="checkbox">
                    <input type="checkbox" name="remember" value="1"> Remember Me
                </label>
                <button class="btn-info btn" type="submit">Login</button>      
            </form>    
          </div>
        </div>
      </div>

      <hr>

      <%- include footer -%>

    </div><!--/.fluid-container-->
